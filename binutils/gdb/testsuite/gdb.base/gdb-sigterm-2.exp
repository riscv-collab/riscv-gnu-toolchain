# Check that GDB promptly quits after receiving a SIGTERM while no proper
# target is active.

gdb_start

set gdb_pid [exp_pid -i [board_info host fileid]]
remote_exec host "kill -TERM $gdb_pid"

set test "expect eof"
gdb_test_multiple "" $test {
    -timeout 5
    eof {
	pass $test
    }
}
