set info_mem_header_pattern \
    "info mem.*Num\[ \t\]+Enb\[ \t\]+Low\[ \t\]+Addr\[ \t\]+High\[ \t\]+Addr\[ \t\]+Attrs\[^\r\n\]*\r\n"

gdb_test_multiple "info mem" "info mem(1)" {
