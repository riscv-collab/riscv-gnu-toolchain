gdb_test "print \"ğ•¯\"" " = \"ğ•¯\"" "print D in string"
# This output is maybe not ideal, but it also isn't incorrect.
gdb_test "print 'ğ•¯'" " = 120175 '\\\\u\\\{01d56f\\\}'" \
    "print D as char"
